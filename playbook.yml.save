---
- name: docker
  hosts: all
  become: yes
  tasks:

    - name: version
      command: docker --version
      register: docker_version
      ignore_errors: true

    - name: install
      apt:
        name: docker.io
        state: present
      when: docker_version.rc != 0

- name: prometheus
  hosts: monitor
  tasks:

  apt:
    name: prometheus
    state: latest
    update_cache: yes
    cache_valid_time: 3600
